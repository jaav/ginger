%{

List<models.Sectors> secs = models.Sectors.find("ouder is null and isActive=1 order by id").fetch();
sec_string = "";
sub_sec_string = "";
sec_ouder = [:]
i = 0;
for(models.Sectors sec: secs) {
	sec_string += sec.naam + ","
	sec_ouder.put(sec.id,i); i++;
	sub_sec_string += sec.naam.substring(0,2).toUpperCase() + "Detail" + ","; 
}

List<models.ActivityType> acts = models.ActivityType.find("ouder is null and isActive=1 order by id").fetch();
act_type_string = "SoortActiviteit" + ",";
sub_act_type_string = "";
act_type = [:]
a = 1;sub_act_count = 0;
sub_act_arr = [:]
for(models.ActivityType act: acts) {
	act_type.put(act.id, a);
	List<models.ActivityType> sub_acts = models.ActivityType.find("ouder is " + act.id + " and isActive=1").fetch();
	for (models.ActivityType sub_act: sub_acts) {
		sub_act_type_string += act.naam.substring(0,2).toUpperCase() + sub_act.naam.replaceAll(",",":") + ",";
		sub_act_arr.put(sub_act.id,sub_act_count);sub_act_count++;
	}
	a++;
}


//SoortActiviteit,OVVoorwaardenscheppend,OVUitwisseling,OVConcept,OVEvaluatie,OVAndere,COBeleidsontwikkelingLok,COBeleidsontwikkelingOrg,VOInformatieoverdracht,VOInspelen,VOInoefenen,VOAndere,VRGroep,VRPersoon,Doelgroep,AantalPreventiewerkers,AantalIntermediairen,AantalBestuursniveau,UDArbeid,UDGezondheid,UDOnderwijs,UDOverheid,UDPolitieEnJustitie,UDVrijetijdsEnCultuurSector,UDWelzijn,UDAlgemeneBevolking,Jongeren,Familiale,Volwassenen,UiteindelijkeAndere,GrootteDoelgroep,MiddelengebruikAlgemeen,Alcohol,IllegaleDrugs,Medicatie,Tabak,Gokken,ICTverslavingen,MatAnder,MatZelf,MatVAD,MatVlaamsN,MatLokaalN,MatInternationaalN,MatGeen,Geevalueerd,Mondeling,Schriftelijk,WieEvaluatie,Verslag,School,Werkplek,Vrijetijdsectoren,Residentiele,Gevangenissen,Lokaal,SpecifiekeDoelgroepen,GeenVanDeze,Locatie,Provincie,Gemeenschap,Postcode,Regio,InterneActiviteit
}%

ActiviteitID,Datum,Omschrijving,Duur,Centrum,Gebruiker,OrgID,SubOrgID,${sec_string}${sub_sec_string}${act_type_string}${sub_act_type_string}

#{list entities, as :'entity'}
%{
if (entity.centrumId==null)
	centrum =  '';
else
    centrum = entity.centrumId.naam;
    
 if (entity.activityDate!=null)
 	date = entity.activityDate.format('dd/MM/yyyy', 'nl');
 else
 	date = "";
 line = entity.id + "," + date + ",'" + entity.beschrijving.replaceAll(",","-") + "',"+entity.duur + "," + centrum + "," + entity.userId.userID + ",";
	sub_org_id  = entity.organizationId
	if (sub_org_id==null) {
		org_id = ''
		sub_org_id = ''
	}
	else if (sub_org_id.ouder !=null) {
		org_id = sub_org_id.ouder.id
		sub_org_id = sub_org_id.id
	} else {
		org_id = sub_org_id.id
		sub_org_id = 1
	}
	line += org_id + "," + sub_org_id + ","; 
	sec_ouder_det = []
	sub_sec_det = []
	for (k in 0..i-1) {
		sec_ouder_det.add("False")
		sub_sec_det.add("0");
	}
	for (models.SectorActivityJunction saj: entity.sectorActivityJunctions) {
		if (saj.sectorId.ouder==null) {
			id = sec_ouder.get(saj.sectorId.id);
			sec_ouder_det[id] = "True";
			
		} else {
			id = sec_ouder.get(saj.sectorId.ouder.id);
			sec_ouder_det[id] = "True";
			sub_sec_det[id] = saj.sectorId.id + "";			
		}
	}
	sub_sec_line = ""
	for (k in 0..i-1) {
		line += sec_ouder_det[k] + ",";
		
	}
	for (k in 0..i-1) {
		line += sub_sec_det[k] + ",";
		
	}
	sub_act_type_det = [];
	for (k in 0..sub_act_count-1) {
		sub_act_type_det.add("False");
	}
	for(models.ActivityTypeJunction at: entity.activityTypeJunctions) {
		soortAct = "";
		if (at.activityTypeId.ouder==null)
			id = at.activityTypeId.id;
		else {
			id = at.activityTypeId.ouder.id;
			sub_act_type_det[sub_act_arr.get(at.activityTypeId.id)] = "True";
			}
		soortAct = 	act_type.get(id);	
	}
	line+=soortAct + ",";
	for (k in 0..sub_act_type_det.size()-1) {
		line += sub_act_type_det[k] + ",";
	}
	
}%
${line}
#{/list}

